extends ../layouts/layout
block body
  .well
    form.form-horizontal#sign-up-form(action='/category/create' method='POST')
      input(type='hidden' name='_csrf' value='#{_csrf}')
      include ../navigation/flash
      .row
        .col-md-offset-4.col-md-6.col-sm-offset-4.col-sm-7
          h3.form-signin-heading Add Style Category
      .form-group
        label.col-md-offset-2.col-md-2.col-sm-offset-1.col-sm-3.control-label(for="CategoryId") Category ID
        .col-md-6.col-sm-7
          input.form-control#CategoryId(type="text", placeholder="1, M3, C2", name="id")
      .form-group
        label.col-md-offset-2.col-md-2.col-sm-offset-1.col-sm-3.control-label(for="CategoryName") Category Name
        .col-md-6.col-sm-7
          input.form-control#CategoryName(type="text", placeholder="Scandinavian Sour Lager", name="name")

      .form-group
        label.col-md-offset-2.col-md-2.col-sm-offset-1.col-sm-3.control-label(for="CategoryType") Beverage Type
        label.col-md-offset-1.col-sm-offset-1.col-md-1.col-sm-1.radio-inline
          input(type="radio", name="type", value="beer", checked="true")
          |  Beer
        label.col-md-1.col-sm-1.radio-inline
          input(type="radio", name="type", value="mead")
          |  Mead
        label.col-md-1.col-sm-1.radio-inline
          input(type="radio", name="type", value="cider")
          |  Cider

      .form-group
        label.col-md-offset-2.col-md-2.col-sm-offset-1.col-sm-3.control-label(for="CategoryOfficial") Official Category
        .col-md-1.col-sm-1
          input.form-control#CategoryOfficial(type="checkbox", name="official", checked="true")

        label.col-md-2.col-sm-3.control-label(for="CategoryExam") Exam Category
        .col-md-2.col-sm-2
          input.form-control#CategoryExam(type="checkbox", name="exam", checked="true")
      .form-group
        label.col-md-offset-2.col-md-2.col-sm-offset-1.col-sm-3.control-label(for="CategoryComments") Category Comments
        .col-md-6.col-sm-7
          textarea.form-control#CategoryComments(placeholder="Client Description", name="comments", rows='8')
      .form-group
        .col-md-offset-4.col-md-6.col-sm-offset-4.col-sm-7
          input.btn.btn-lg.btn-primary(type='submit', value='Create Category')

